{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (Windows)",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-I${workspaceFolder}\\include",
                "src\\glad.c",
                "src\\main.cpp",
                "-L${workspaceFolder}\\lib",
                "-lglfw3dll",
                "-lopengl32",
                "-lgdi32",
                "-o",
                "${workspaceFolder}\\bin\\program.exe"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++.exe build active file",
            "command": "C:/Program Files/LLVM/bin/clang++.exe",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/Program Files/LLVM/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}